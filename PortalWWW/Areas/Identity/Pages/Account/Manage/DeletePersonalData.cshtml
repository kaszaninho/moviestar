@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container d-flex justify-content-center align-items-start mt-0 pt-3">
    <div class="col-md-8 col-lg-6">
        <h3 class="text-center text-danger">@ViewData["Title"]</h3>

        <div class="p-4 border rounded shadow bg-dark text-white">
            <div class="alert alert-warning text-center" role="alert">
                <p class="fw-bold" style="color:black;">
                    Deleting this data will permanently remove your account, and this cannot be recovered.
                </p>
            </div>

            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                        <label asp-for="Input.Password" class="form-label" style="color:black;"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }

                <button class="w-100 btn btn-lg btn-danger" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
