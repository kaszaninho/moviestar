@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg border-0 bg-dark text-white" style="width: 600px; border-radius: 10px;">
        <h2 class="text-center mb-4">Register</h2>
        <form id="registerForm" method="post">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-light text-dark rounded-3" placeholder="Email" autocomplete="username" />
                <label asp-for="Input.Email" class="text-dark">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control bg-light text-dark rounded-3" placeholder="Password" autocomplete="new-password" />
                <label asp-for="Input.Password" class="text-dark">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control bg-light text-dark rounded-3" placeholder="Confirm Password" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword" class="text-dark">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control bg-light text-dark rounded-3" placeholder="First Name" />
                <label asp-for="Input.FirstName" class="text-dark">First Name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control bg-light text-dark rounded-3" placeholder="Last Name" />
                <label asp-for="Input.LastName" class="text-dark">Last Name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" type="text" id="datepicker" class="form-control bg-light text-dark rounded-3" placeholder="Select your date of birth">
                <label asp-for="Input.DateOfBirth" class="text-dark">Date of Birth</label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control bg-light text-dark rounded-3" placeholder="City" />
                <label asp-for="Input.City" class="text-dark">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.CountryId" class="form-control bg-light text-dark rounded-3" asp-items="Model.Countries">
                    <option value="">-- Country --</option>
                </select>
                <label asp-for="Input.CountryId" class="text-dark">Country</label>
                <span asp-validation-for="Input.CountryId" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-3">Sign up</button>
            </div>

            <div class="text-center mt-3">
                <a asp-page="./Login" class="text-white">Already have an account? Log in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr("#datepicker", {
                dateFormat: "d/m/Y",
                defaultDate: new Date(),
                allowInput: true,
            });
        });
    </script>
}
