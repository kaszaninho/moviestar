@using PortalWWW.Helpers
@using static PortalWWW.Helpers.GenericCheck;
@model DatabaseAPI.Models.General.Photo;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-10">
            <div class="row pt-4 pb-3">
                <div class="col-6">
                    <h4 class="text-primary">Photo Details</h4>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm custom-btn">
                        <i class="bi bi-pencil"></i>
                        Edit
                    </a>
                    <a asp-action="Index" class="btn btn-primary m-2">
                        <i class="bi bi-arrow-left"></i>
                        Back to List
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover custom-table">
                    <input asp-for="Id" type="hidden" class="form-control" ) />

                    <div class="table-responsive">
                        <table id="tblData" class="table table-bordered table-striped table-hover custom-table">
                            <thead>
                                <tr>
                                    <th>Details</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <tbody>
                        <tr>
                            <td>
                                <strong><label asp-for="PathToPhoto" class="form-label">Path To Photo</label></strong>
                            </td>
                            <td>
                                <div class="form-floating mb-3">
                                    <input asp-for="PathToPhoto" class="form-controlX " id="floatingInput" value="@Model.PathToPhoto" readonly>
                                    <span asp-validation-for="PathToPhoto" class="text-danger"></span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-2">
                <div class="border p-1 m-2 text-center">
                    <img src="@Model.PathToPhoto" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9" />
                    <a asp-action="DeleteImage" class="btn btn-danger" asp-route-id="@Model.Id">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
