@model DatabaseAPI.Models.General.Photo;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-lite.min.css" rel="stylesheet">

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Create Photo</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-10">
            <div class="table-responsive">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <table class="table table-bordered table-striped table-hover custom-table">
                        <input asp-for="Id" type="hidden" class="form-control" ) />

                        <div class="table-responsive">
                            <table id="tblData" class="table table-bordered table-striped table-hover custom-table">
                                <thead>
                                    <tr>
                                        <th>Create</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <tbody>
                            <tr>
                                <td>
                                    <strong><label asp-for="PathToPhoto" class="form-label">Path to photo</label></strong>
                                </td>
                                <td>
                                    <div class="form-floating mb-3">
                                        <input name="file" type="file" class="form-control" id="floatingInput">
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group mt-3">
                        <input type="submit" value="Create" class="btn btn-success m-2" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Content').summernote();
        });
    </script>
}
