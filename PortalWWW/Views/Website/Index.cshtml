@using System.Linq;
@using DatabaseAPI.Models.DictionaryModels;
@using static PortalWWW.Helpers.GenericCheck;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Web Pages</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success m-2 custom-btn">
                <i class="bi bi-plus-circle"></i> Add  New Page
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tblData" class="table table-bordered table-striped table-hover custom-table">
            <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title Name</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            var message = '@TempData["SuccessMessage"]';
            if (message) {
                toastr.success(message);
            }
        });
    </script>

    <script>
        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": { url: '/website/getall' },
                "columns": [
                    { "data": "id" },
                    { "data": "titleName" },
                    { "data": "name" },
                    { "data": "description" },
                    {
                        data: 'id',
                        "render": function (data) {
                            return `<div class="test-center" >
                                                <a onClick=Delete('/website/deleteconfirmed?id=${data}') class="btn btn-danger btn-sm custom-btn">Delete</a>
                                        <a href="/website/details?id=${data}" class="btn btn-info btn-sm custom-btn">Details</a>
                                        <a href="/website/edit?id=${data}" class="btn btn-warning btn-sm custom-btn">Edit</a>
                                    </div>`
                        }
                    }
                ]
            })
        }
        function Delete(url) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        success: function (data) {
                            dataTable.ajax.reload();
                            Swal.fire("Deleted!", "Your record has been deleted.", "success");
                        },
                        error: function (err) {
                            Swal.fire("Error!", "Something went wrong.", "error");
                        }
                    });
                }
            });
        }
    </script>
}