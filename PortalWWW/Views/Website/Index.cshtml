@using System.Linq;
@using DatabaseAPI.Models.DictionaryModels;
@using static PortalWWW.Helpers.GenericCheck;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Page</a>
</p>

<table id="tblData" class="table table-striped table-bordered table-hover table-sm table-responsive">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Title Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#tblData').DataTable({
                "ajax": { url: '/website/getall' },
                "columns": [
                    { "data": "id" },
                    { "data": "titleName" },
                    { "data": "description" },
                    {
                        data: 'id',
                        "render": function (data) {
                            return `<div class="test-center" >
                                            <a href="/website/delete?id=${data}" class="btn btn-primary"> Delete </a>
                                                    <a href="/website/details?id=${data}" class="btn btn-primary"> Details </a>
                                                    <a href="/website/edit?id=${data}" class="btn btn-primary"> Edit </a>
                                            </div>`
                        }
                    }
                ]
            })
        }
    </script>
}