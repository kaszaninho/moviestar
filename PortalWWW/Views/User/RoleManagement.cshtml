@using PortalWWW.Helpers
@using static PortalWWW.Helpers.GenericCheck;
@model RoleManagementVM;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Role Management</h1>


<form method="post" class="row">
    <div class="border p-3">
    <input asp-for="User.Id" hidden />
<div class="form-floating mb-3">
    <input asp-for="User.FirstName" readonly class="form-control" aria-required="true" />
    <label asp-for="User.FirstName">First Name</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="User.LastName" readonly class="form-control" aria-required="true" />
        <label asp-for="User.LastName">Last Name</label>
    </div>
<div class="form-group">
        <label asp-for="User.Role" class="control-label">Role</label>
    <select asp-for="User.Role" class="form-control" asp-items="@Model.RoleList"></select>
        <span asp-validation-for="User.Role" class="text-danger"></span>
    </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update Role</button>
            </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                </div>
    </div>
    </div>
</form>
