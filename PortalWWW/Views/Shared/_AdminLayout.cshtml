<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MovieStar Cinema</title>
    <link href="/css/bootstrap/bootstrap.css" rel="stylesheet">
    <link href="/css/custom_style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
     <link href="~/css/global.css" rel="stylesheet">
    <link href="~/css/index.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
</head>

<body>
    @*Navigation*@
    @await Component.InvokeAsync("AdminNavigationComponent")

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-light vh-100">
            <div class="sidebar-header py-3 px-4 border-bottom border-secondary">
                <h2 class="fs-4">My Sidebar</h2>
            </div>
            <ul class="list-unstyled sidebar-menu">
                <li>
                    <a href="#" class="d-block text-decoration-none py-2 px-3 text-light">
                        <i class="fas fa-home me-2"></i> Home
                    </a>
                </li>
                <!-- Movies Section -->
                <li>
                    <a class="d-block text-decoration-none py-2 px-3 text-light" data-bs-toggle="collapse" href="#moviesMenu" role="button" aria-expanded="false" aria-controls="moviesMenu">
                        <i class="fas fa-film me-2"></i> Movies
                    </a>
                    <div class="collapse" id="moviesMenu">
                        <ul class="list-unstyled ps-4">
                            <!-- Dictionary Models -->
                            <li>
                                <a class="d-block text-decoration-none py-2 px-3 text-light" data-bs-toggle="collapse" href="#dictionaryModels" role="button" aria-expanded="false" aria-controls="dictionaryModels">
                                    Dictionary Models
                                </a>
                                <div class="collapse" id="dictionaryModels">
                                    <ul class="list-unstyled ps-4">
                                        <li><a href="#" class="text-decoration-none py-2 px-3 text-light">Countries</a></li>
                                        <li><a href="#" class="text-decoration-none py-2 px-3 text-light">Genres</a></li>
                                        <li><a href="#" class="text-decoration-none py-2 px-3 text-light">Languages</a></li>
                                        <!-- Add more items as needed -->
                                    </ul>
                                </div>
                            </li>
                            <!-- Compound Models -->
                            <li>
                                <a class="d-block text-decoration-none py-2 px-3 text-light" data-bs-toggle="collapse" href="#compoundModels" role="button" aria-expanded="false" aria-controls="compoundModels">
                                    Compound Models
                                </a>
                                <div class="collapse" id="compoundModels">
                                    <ul class="list-unstyled ps-4">
                                        <li><a href="#" class="text-decoration-none py-2 px-3 text-light">Movies</a></li>
                                        <li><a href="#" class="text-decoration-none py-2 px-3 text-light">Coupons</a></li>
                                        <!-- Add more items as needed -->
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </li>
                <!-- General Section -->
                <li>
                    <a class="d-block text-decoration-none py-2 px-3 text-light" data-bs-toggle="collapse" href="#generalMenu" role="button" aria-expanded="false" aria-controls="generalMenu">
                        <i class="fas fa-cogs me-2"></i> General
                    </a>
                    <div class="collapse" id="generalMenu">
                        <ul class="list-unstyled ps-4">
                            <li>
                                <a class="d-block text-decoration-none py-2 px-3 text-light" data-bs-toggle="collapse" href="#generalDictionaryModels" role="button" aria-expanded="false" aria-controls="generalDictionaryModels">
                                    Dictionary Models
                                </a>
                                <div class="collapse" id="generalDictionaryModels">
                                    <ul class="list-unstyled ps-4">
                                        <li><a href="#" class="text-decoration-none py-2 px-3 text-light">Payment Methods</a></li>
                                        <!-- Add more items as needed -->
                                    </ul>
                                </div>
                            </li>
                            <!-- Add other general submenus -->
                        </ul>
                    </div>
                </li>

                <li class="menu-item has-submenu">
                    <a href="#">
                        <i class="fas fa-user"></i> People
                    </a>
                    <ul class="submenu">
                        <li class="menu-item has-submenu">
                            <a href="#">Dictionary Models</a>
                            <ul class="submenu">
                            </ul>
                        </li>
                        <li class="menu-item has-submenu">
                            <a href="#">Compound Models</a>
                            <ul class="submenu">
                                <li><a asp-controller="Actor" asp-action="Index">Actors</a></li>
                                <li><a asp-controller="User" asp-action="Index">Users</a></li>
                                <li><a asp-controller="Invoice" asp-action="Index">Invoices</a></li>
                            </ul>
                        </li>
                    </ul>
                </li>

                <li class="menu-item has-submenu">
                    <a href="#">
                        <i class="fas fa-cog"></i> Cinema
                    </a>
                    <ul class="submenu">
                    </ul>
                </li>
                <li>
                    <a href="#" class="d-block text-decoration-none py-2 px-3 text-light">
                        <i class="fas fa-sign-out-alt me-2"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
            <partial name="_Notification" />
        <!-- Content -->
        <div class="content flex-grow-1">
            @RenderBody()

            @await RenderSectionAsync("AdditionalContent", required: false)
        </div>
    </div>

    @RenderBody()
    @*Footer*@
    @await Component.InvokeAsync("FooterComponent")

   
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        window.onscroll = function () { myFunction() };

        var navbar_sticky = document.getElementById("navbar_sticky");
        var sticky = navbar_sticky.offsetTop;
        var navbar_height = document.querySelector('.navbar').offsetHeight;

        function myFunction() {
            if (window.pageYOffset >= sticky + navbar_height) {
                navbar_sticky.classList.add("sticky")
                document.body.style.paddingTop = navbar_height + 'px';
            } else {
                navbar_sticky.classList.remove("sticky");
                document.body.style.paddingTop = '0'
            }
        }
    </script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
}
