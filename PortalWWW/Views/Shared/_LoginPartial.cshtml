@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link">
            Hello @User.Identity?.Name!
        </a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" class="nav-link">
            Logout
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a>
    </li>
}
