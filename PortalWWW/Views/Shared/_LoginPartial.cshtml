@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var registerTitle = User.IsInRole("Admin") ? "Account Creation" : "Register";
}
<ul class="navbar-nav">
    <li class="nav-item">
        <form asp-area="Identity" asp-page="/Account/Register">
            <button class="btn btn-toolbar">@registerTitle</button>
        </form>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <button class="btn btn-toolbar">Hello @User.Identity?.Name!</button>
            </form>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button type="submit" class="btn btn-toolbar">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Login">
                <button class="btn btn-toolbar">Login</button>
            </form>
        </li>
    }
</ul>
