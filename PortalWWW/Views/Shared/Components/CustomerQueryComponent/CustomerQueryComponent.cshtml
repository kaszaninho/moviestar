@model DatabaseAPI.Models.Shop.CustomerQuery

@{
    ViewData["Title"] = "Customer Query";
}

<h2 class="mb-4 text-center">📝 Write to Us</h2>
<form asp-action="Create" asp-controller="CustomerQuery" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold">Name & Surname</label>
        <input asp-for="Name" class="form-control" placeholder="Enter your Full Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactNumber" class="form-label fw-bold">Telephone</label>
        <input asp-for="ContactNumber" class="form-control" placeholder="Enter your phone" required>
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-bold">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold">Message</label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter the Message" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg w-100">📨 Send Message</button>
    </div>
</form>
