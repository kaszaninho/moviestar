@model DatabaseAPI.Models.CMS.UsefulLink;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-lite.min.css" rel="stylesheet">
 
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h4 class="text-primary">Create Useful link</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-primary m-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <form asp-action="Create" method="post">
            <table class="table table-bordered table-striped table-hover custom-table">
                <div class="table-responsive">
                    <table id="tblData" class="table table-bordered table-striped table-hover custom-table">
                        <thead>
                            <tr>
                                <th>New Useful link</th>

                            </tr>
                        </thead>
                    </table>
                </div>
                <tbody>
                    <tr>
                        <td>
                            <label asp-for="Name" class="form-label">Name</label>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control" id="floatingInput">
                                <label asp-for="Name">Enter Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong><label asp-for="Description" class="form-label">Description</label></strong>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <textarea asp-for="Description" class="form-control" id="floatingDescription" placeholder="Description" style="height: 150px;"></textarea>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong><label asp-for="Content" class="form-label">Content</label></strong>
                        </td>
                        <td>
                            <div class="form-floating mb-3">
                                <textarea asp-for="Content" class="form-control" id="floatingInput" placeholder="Content" style="height: 300px;"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success m-2" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-lite.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#Content').summernote();
        });
    </script>
}