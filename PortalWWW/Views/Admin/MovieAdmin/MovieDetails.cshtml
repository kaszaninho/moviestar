@model DatabaseAPI.Models.CinemaMovie.Movie;
<div class="row">
    <div class="col-8">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(movie => movie.AgeRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(movie => movie.AgeRating.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(movie => movie.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(movie => movie.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(movie => movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(movie => movie.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(movie => movie.MovieFormat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(movie => movie.MovieFormat.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(movie => movie.MovieProductionCompany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(movie => movie.MovieProductionCompany.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(movie => movie.imageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(movie => movie.imageUrl)
        </dd>
    </div>
    <div class="col-4">
        <div class="border p-1 m-2 text-center">
            <img src="@Model.imageUrl" width="100%"
                 style="border-radius:5px; border:1px solid #bbb9b9" />
            <a asp-action="DeleteImage" class="btn btn-danger" asp-route-id="@Model.Id">
                <i class="bi bi-trash-fill"></i> Delete
            </a>
        </div>
    </div>
</div>