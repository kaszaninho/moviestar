@using DatabaseAPI.Models.CinemaMovie;
@model IEnumerable<DatabaseAPI.Models.CinemaMovie.Screening>;



<div class="col-md-6 d-flex card">
    <div class="card-body">
        @if (Model.Count() == 0)
        {
            <p>Sorry, no screenings for this choice. </p>
        }
        @foreach (var screening in Model)
        {
            <form asp-controller="Movie" asp-action="ChooseSeat" asp-route-screeningId="@screening.Id">
                <button class="btn-dark btn m-2">@screening.StartDate.Value.ToString("HH:mm")</button>
            </form>
        }
    </div>
</div>