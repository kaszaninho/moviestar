@model IEnumerable<DatabaseAPI.Models.CinemaMovie.Movie>

@{
    ViewData["Title"] = "Home Page";
}


<section class="hero">
    <div class="container">
        <div class="row">
 
            <div class="col-md-6 align-items-center">
                <h2>Welcome to MovieStar Cinema</h2>
                <p>Discover the latest movies and book your tickets now!</p>
            </div>
        </div>
    </div>
</section>

<section class="latest-news" style="text-align:center">   
    <form asp-area="Movie" asp-page="">
        <label class="form-label" for="movieSelect"><b>Select a Movie:</b></label>
        <select id="movieSelect" name="movieSelect" class="user-select-auto">
            <option value="">-- Select a Movie --</option>
            @foreach (var movie in Model)
            {
                <option value="@movie.Id">@movie.Name</option>
            }
        </select>
        <button class="btn btn text-white bg_red rounded-0 border-0">Choose a date</button>
    </form>
</section>
<br><br>
<section id="carouselSection" class="align-content-center m-1">
    <div class="container">
        <div class="row">
            <div class="container col-md-6 d-flex justify-content-center align-items-center text-center">
                <h3>Latest added movies to the cinema</h3>
            </div>
            <div class="col-md-6 d-flex justify-content-center">
                <div id="carouselExampleIndicators" class="carousel slide col-md-6" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://via.placeholder.com/200x300?text=Movie+1" class="d-block" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://via.placeholder.com/200x300?text=Movie+2" class="d-block" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://via.placeholder.com/200x300?text=Movie+3" class="d-block" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="featured-movies">
    <div class="container">
        <h2>Featured Movies</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/200x300" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Movie 1</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/200x300" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Movie 2</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/200x300" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Movie 3</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="latest-news">
    <div class="container">
        <h2>Latest News</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Special Screening Event</h5>
                        <p class="card-text">Join us for a special screening of the latest blockbuster. Get your tickets now!</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            <!-- Add more news cards here -->
        </div>
    </div>
</section>

