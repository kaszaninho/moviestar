@* @model IEnumerable<DatabaseAPI.Models.General.Address >

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mb-4">Contact Information</h2>
                @foreach (var item in Model)
                {
                    
                        <p><strong>Address:</strong> <span id="store-address">@item.StreetName, @item.HouseNumber</span></p>
                    <p><strong>Country:</strong> @item.Country EirCode: <strong>@item.EirCode</strong></p>
                    <p><strong>Email:</strong> @item.PhoneNumber</p>
                        <p><strong>Opening Hours:</strong></p>
                        @if (item.OpeningHour == null)
                        {
                            <ul>
                                <li>No opening hours available</li>
                            </ul>
                            <ul>
                                <li>No opening hours available</li>
                            </ul>
                        }
                        else
                        {
                            <ul>
                                @foreach (var hour in item.OpeningHour)
                                {

                                    <li>@hour.StartHour @hour.EndHour</li>

                                }
                            </ul>
                        }
                    }
                
            </div>
            @await Component.InvokeAsync("CustomerQueryComponent")


        </div>
    </div>
</section>

