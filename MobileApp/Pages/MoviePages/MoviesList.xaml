<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.MoviePages.MoviesList"
             Title="MoviesList">

    <Grid RowDefinitions="Auto, Auto, Auto, *"  
        RowSpacing="10"
      Margin="20">

        <!-- Title -->
        <Label Text="All Movies"
           Grid.Row="0"
           FontSize="Large" />

        <!-- Sorting Picker -->
        <Picker Grid.Row="1"
            Title="Sort by"
            SelectedIndexChanged="SortPicker_Changed">
            <Picker.Items>
                <x:String>Name (A-Z)</x:String>
                <x:String>Name (Z-A)</x:String>
            </Picker.Items>
        </Picker>

        <!-- Filtering Picker -->
        <Picker Grid.Row="2"
            Title="Filter by Genre"
            SelectedIndexChanged="FilterPicker_Changed"
            x:Name="GenrePicker"/>

        <!-- Movies CollectionView -->
        <CollectionView Grid.Row="3"
                x:Name="CvAllMovies"
                SelectionMode="Single"
                VerticalScrollBarVisibility="Always"
                VerticalOptions="FillAndExpand">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                           ItemSpacing="30" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="8" BackgroundColor="#F5F5F5">
                        <HorizontalStackLayout Spacing="10">

                            <!-- Movie Image -->
                            <Border StrokeShape="RoundRectangle 10">
                                <Image HeightRequest="100"
                               WidthRequest="90"
                               Source="{Binding FullImageUrl}" />
                            </Border>

                            <!-- Movie Info -->
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" 
                               FontSize="Medium" 
                               FontAttributes="Bold"/>
                                <Label Text="{Binding AgeRating, StringFormat='Age Rating: {0}'}" 
                               FontSize="Small" />
                                <Label Text="{Binding Country, StringFormat='Country: {0}'}" 
                               FontSize="Small" />
                                <Label Text="{Binding Genre, StringFormat='Genre: {0}'}" 
                               FontSize="Small" />
                                <Label Text="{Binding Duration, StringFormat='Duration: {0} min'}" 
                               FontSize="Small" />
                                <Label Text="{Binding TicketPrice, StringFormat='Ticket Price: ${0:F2}'}" 
                               FontSize="Small" />

                                <!-- Navigate Button -->
                                <Button Text="View Details"
                                FontSize="Small"
                                Clicked="OnMovieDetailsClicked"
                                CommandParameter="{Binding MovieId}" />
                            </VerticalStackLayout>

                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>